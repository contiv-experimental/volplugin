{ 
  "default-options": {
    "pool": "rbd",
    "size": "10MB",
    "snapshots": true,
    "snapshot": {
      "frequency": "30m",
      "keep": 20
    },
    "filesystem": "btrfs"
  },
  "filesystems": {
    "ext4": "mkfs.ext4 -m0 %",
    "btrfs": "mkfs.btrfs %",
    "falsefs": "/bin/false"
  }
}
